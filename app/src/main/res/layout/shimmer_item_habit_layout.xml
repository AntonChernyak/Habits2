<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_small_8"
    app:cardCornerRadius="@dimen/item_card_corner_external_radius_8"
    app:cardElevation="@dimen/item_card_elevation_4"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:id="@+id/shimmerItemColorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shimmer_color"
        android:padding="@dimen/spacing_tiny_4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_item_card"
            android:padding="@dimen/spacing_small_8">

            <TextView
                android:id="@+id/shimmerItemTitleTextView"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_small_8"
                android:background="@drawable/background_shimmer_rect"
                app:layout_constraintEnd_toStartOf="@+id/shimmerItemPriorityTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/shimmerItemPriorityTextView"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_shimmer_rect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/shimmerItemDescriptionTextView"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:background="@drawable/background_shimmer_rect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shimmerItemTitleTextView" />

            <TextView
                android:id="@+id/shimmerItemPeriodTextView"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:background="@drawable/background_shimmer_rect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shimmerItemDescriptionTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>