<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".presentation.habitslist.HabitListViewPagerContainerFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/habitsListToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/my_habits" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/habit_creator_divider_color"
        android:elevation="1dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/habits_tab_layout"
        style="@style/TabLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/habits_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:overScrollMode="never"
        tools:background="@color/purple_material_200" />

</LinearLayout>