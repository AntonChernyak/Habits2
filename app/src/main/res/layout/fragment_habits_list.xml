<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/bottom_sheet_peek_height"
        android:fitsSystemWindows="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/habitsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            tools:itemCount="5"
            tools:listitem="@layout/item_habit" />
    </FrameLayout>

    <include layout="@layout/search_and_sorting_bottom_sheet"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addFabButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/spacing_medium_16"
        android:layout_marginBottom="@dimen/spacing_medium_16"
        android:clickable="true"
        android:contentDescription="@string/add_habit"
        android:focusable="true"
        app:backgroundTint="@color/primary_color_green"
        app:srcCompat="@drawable/ic_add_24_white"
        app:tint="@color/white"
        app:layout_anchor="@+id/search_bottom_sheet"
        app:layout_anchorGravity="top|end"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
