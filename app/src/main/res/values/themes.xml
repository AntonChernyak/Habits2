<resources>
    <!-- Base application theme. -->
    <style name="Theme.Habits" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_material_400</item>
        <item name="colorPrimaryVariant">@color/green_material_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_material_200</item>
        <item name="colorSecondaryVariant">@color/teal_material_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="habitCreatorSeparatorStyle">
        <item name="android:layout_marginStart">@dimen/spacing_tiny_4</item>
        <item name="android:layout_marginEnd">@dimen/spacing_tiny_4</item>
        <item name="android:background">@color/separator_color</item>
    </style>

    <style name="habitCreatorSubtitleStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/spacing_tiny_4</item>
    </style>

</resources>